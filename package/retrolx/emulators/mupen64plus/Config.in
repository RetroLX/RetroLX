config BR2_PACKAGE_RETROLX_MUPEN64
	bool "RetroLX Mupen64 packages selection"

	# Core module
	select BR2_PACKAGE_MUPEN64PLUS_CORE

	# Console (command-line) front-end user interface
	select BR2_PACKAGE_MUPEN64PLUS_UICONSOLE

	# Input plugin
	select BR2_PACKAGE_MUPEN64PLUS_INPUT_SDL

	# RSP processor plugin
	select BR2_PACKAGE_MUPEN64PLUS_RSPHLE

	# Audio plugin
	select BR2_PACKAGE_MUPEN64PLUS_AUDIO_SDL           if  !BR2_PACKAGE_RETROLX_TARGET_RPI2
	select BR2_PACKAGE_MUPEN64PLUS_OMX                 if  BR2_PACKAGE_RETROLX_TARGET_RPI2 # rpi audio

	# Video plugin
	select BR2_PACKAGE_MUPEN64PLUS_GLIDEN64             if !BR2_PACKAGE_RETROLX_RPI_VCORE && !BR2_PACKAGE_RETROLX_TARGET_H3
	select BR2_PACKAGE_MUPEN64PLUS_VIDEO_GLIDE64MK2     if !BR2_PACKAGE_RETROLX_RPI_VCORE && !BR2_PACKAGE_RETROLX_TARGET_H3
	select BR2_PACKAGE_MUPEN64PLUS_GLES2                if !BR2_aarch64 && ( BR2_PACKAGE_RETROLX_RPI_VCORE || BR2_PACKAGE_RETROLX_ROCKCHIP_ANY || BR2_PACKAGE_RETROLX_TARGET_H3 )
	select BR2_PACKAGE_MUPEN64PLUS_VIDEO_RICE           if BR2_PACKAGE_RETROLX_IS_X86_ARCH || BR2_PACKAGE_RETROLX_TARGET_RK3399 || BR2_PACKAGE_RETROLX_TARGET_RK3288

	help
	  Mupen64

